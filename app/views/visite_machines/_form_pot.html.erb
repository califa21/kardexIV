<div id="unitee">
<% if (@unite != "date" ) then %>
	<label for="visite_machine_val_potentiel">faites à :</label><%= @unite %><%= text_field "visite_machine", "val_potentiel", :size => 20 %>
<%else%>
	<%= hidden_field_tag("visite_machine[val_potentiel]",0)%>
<%end%>
<p>
<% if ( @pot_var) %> 
	<p><label for="visite_machine_val_nouv_pot">Nouveau potentiel: </label>
		<%= text_field "visite_machine", "val_nouv_pot", :size => 20 %></p>
<% end %>

<% if @carn then %>
	<label for="visite_machine_fait_a_heure">Nb heure:</label>
	<%= text_field "visite_machine", "fait_a_heure", :size => 20 %></p>
	<label for="visite_machine_fait_a_heure_moteur">Nb heure Moteur:</label>
	<%= text_field "visite_machine", "fait_a_heure_moteur", :size => 20 %></p>
	<label for="visite_machine_fait_a_nb_cycle">Nb cycle:</label>
	<%= text_field "visite_machine", "fait_a_nb_cycle", :size => 20 %></p>
<%end%>
</p>
<%if !(@visite_induites.nil?) then %>
<%if !(@visite_induites.empty?) then %>
<h3>visites validées du fait de la réalisation de la visite</h3>
<table border=1>
	<tr>
		<th>Nom de la visite</th>
		<th>valeur potentiel</th>
	</tr>
<% @visite_induites.each  do |induite| %>
	<tr>
		<td><%=induite.induite.Nom %></td>
		<td><%= text_field "induite["+induite.induite.id.to_s+"]", :pot_montage , :value=>val_pot(params[:id_machine],induite.induite.type_potentiel.type_potentiel) %>
<%end%>
</table>
<%end%>
<%end%>
</div>