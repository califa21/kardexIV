    <td><%= link_to 'modifier', edit_exec_cn_equipement_path(@exec_cn_equipement) %></td>
    <td><%= link_to 'Suppr', @exec_cn_equipement, :confirm => 'êtes vous sur?', :method => :delete %></td>
