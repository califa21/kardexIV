
<%= form_for(@visite_protocolaire) do |f| %>
  <% if @visite_protocolaire.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@visite_protocolaire.errors.count, "error") %> prohibited this visite_protocolaire from being saved:</h2>

      <ul>
      <% @visite_protocolaire.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table border=0>
  <tr><td>
<label for="visite_protocolaire_nom">nom de la visite :</label></td>
<td><%= text_field "visite_protocolaire", "Nom", :size => 20 %><br/>
</td></tr>

<tr><td>
<label for="type_visite_protocolaire_idtype_machine">type de machine:</label></td>
<td>
<%=  select("visite_protocolaire", "idtype_machine", TypeMachine.all.collect {|p| [ p.type_machine, p.id ] })%><br/>
</td></tr>

<tr><td>
<label for="type_visite_protocolaire_idtype_potentiel">type de potentiel:</label></td>
<td>
<%=  select("visite_protocolaire", "idtype_potentiel", TypePotentiel.all.collect {|p| [ p.type_potentiel, p.id ] })%><br/>
